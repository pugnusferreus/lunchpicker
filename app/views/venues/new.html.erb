<h1>New venue</h1>

<% form_for(@venue) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :comments %><br />
    <%= f.text_area (:comments,:cols => 60, :rows => 10) %>
  </p>
  <p>
    <%= f.label :location_id %><br />
      <select id="venue_location_id" name="venue[location_id]">
      <option value="">Please select a location</option>
      <% 
      @locations = Location.all
      @locations.each do |location| 
      %>
        <option value="<%=h location.id %>"><%=h location.name %></option>
      <% end %>
    </select>

  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
    <input type="button" name="search_location" id="search_location" value="Search" onclick="showAddress(document.getElementById('venue_address').value);"/>

  </p>
  <div id="map_canvas" style="width: 500px; height: 300px"></div>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', venues_path %>
